    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Main Window",
            "type": "debugpy",
            "request": "launch",
            "module": "PyRetroPlayer.main_window",
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal"
        },
        {
            "name": "Print Library",
            "type": "debugpy",
            "request": "launch",
            "program": "src/PyRetroPlayer/library_tools.py",
            "console": "integratedTerminal",
            "args": [
                "/home/andre/.local/share/PyRetroPlayer/song_library.db"
            ]
        }
    ]
}